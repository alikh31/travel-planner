#!/bin/sh

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged (ESLint on staged files)
echo "ğŸ“ Running ESLint..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the errors above."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type check..."
npm run type-check 2>/dev/null || npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the type errors."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm test -- --passWithNoTests --watchAll=false 2>/dev/null || echo "âš ï¸  No test script found, skipping..."

# Run build
echo "ğŸ—ï¸  Running build..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix the build errors."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"